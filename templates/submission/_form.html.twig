{% set trash_icon %}
    <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-5 h-5">
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"></path>
    </svg>
{% endset %}

{% set submission_prototype %}
    <div class="col-span-4">
        {{ form_row(form.entries.vars.prototype.task, { 'row_attr': {'class': "mb-0" }}) }}
    </div>
    <div class="col-span-2">
        {{ form_row(form.entries.vars.prototype.hours_planned, { 'row_attr': {'class': "mb-0" }}) }}
    </div>
    <div class="col-span-2">
        {{ form_row(form.entries.vars.prototype.hours_actual, { 'row_attr': {'class': "mb-0" }}) }}
    </div>
    <div
        class="">
        <button
            type="button"
            data-action="submission#remove"
            class="relative focus:outline-none text-white bg-red-700 hover:bg-red-800 border border-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-2.5 py-2.5 sm:py-2.5 before:pointer-events-none before:absolute before:inset-0 before:rounded-[7px] before:shadow-[0px_1px_0px_0px_#EF4444_inset] hover:before:shadow-[0px_1px_0px_0px_#DC2626_inset]"
        >
            {{ trash_icon }}
        </button>
    </div>
{% endset %}

<div
    data-controller="submission"
    data-submission-index-value="{{ form.entries|length > 0 ? form.entries|last.vars.name + 1 : 0 }}"
    data-submission-prototype-value="{{ submission_prototype|raw|e('html_attr') }}"
>
    {{ form_start(form) }}
	<div class="mb-6">
		{{ form_row(form.date, {'attr': { 'class': 'max-w-xs'}}) }}
	</div>
	<div class="mb-6">
		{{ form_row(form.comments) }}
	</div>


    <div class="rounded-xl bg-gray-50 p-1">
        <h3 class="block my-2 px-3 sm:text-sm font-medium text-gray-900 dark:text-white">
            Entries</h3>
        <div
            class="overflow-hidden rounded-lg border border-gray-200 shadow-main bg-white"
        >
            <div
                class="w-full grid gap-3 md:grid-cols-9 p-3 sm:text-sm text-gray-600">
                <div class="col-span-4">
                    Task
                </div>
                <div class="col-span-2">Hours
                    Planned
                </div>
                <div class="col-span-2">Hours
                    Actual
                </div>
                <div>Actions</div>
            </div>
            <ul class="flex flex-wrap gap-1"
                data-submission-target="collectionContainer">
                {% for entry in form.entries %}
                    <li class="w-full grid gap-3 md:grid-cols-9 px-3">
                        <div
                            class="col-span-4">
                            {{ form_row(entry.task, { 'row_attr': {'class': "mb-0" }}) }}
                        </div>
                        <div
                            class="col-span-2">
                            {{ form_row(entry.hours_planned, { 'row_attr': {'class': "mb-0" }}) }}
                        </div>
                        <div
                            class="col-span-2">
                            {{ form_row(entry.hours_actual, { 'row_attr': {'class': "mb-0" }}) }}
                        </div>
                        <div
                            class="">
                            <button
                                type="button"
                                data-action="submission#remove"
                                class="relative focus:outline-none text-white bg-red-700 hover:bg-red-800 border border-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-2.5 py-2.5 sm:py-2.5 before:pointer-events-none before:absolute before:inset-0 before:rounded-[7px] before:shadow-[0px_1px_0px_0px_#EF4444_inset] hover:before:shadow-[0px_1px_0px_0px_#DC2626_inset]">
                                {{ trash_icon }}
                            </button>
                        </div>
                    </li>
                {% endfor %}
            </ul>
            <div
                class="m-3 mt-6 flex justify-between">
                <button
                    type="button"
                    data-action="submission#addCollectionElement"
                    class="relative focus:outline-none text-black bg-white hover:bg-gray-50 border border-gray-300 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-3 py-1.5">
                    Add
                </button>
                <button formnovalidate
                        class="relative focus:outline-none text-white bg-green-700 hover:bg-green-800 border border-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-3 py-1.5
                        before:pointer-events-none before:absolute before:inset-0 before:rounded-[7px] before:shadow-[0px_1px_0px_0px_#22C55E_inset] hover:before:shadow-[0px_1px_0px_0px_#16A34A_inset]">
                    {{ button_label|default('Save') }}
                </button>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
