{% extends 'base.html.twig' %}

{% set submission_prototype %}
    <div class="col-span-2">
        {{ form_row(form.entries.vars.prototype.task) }}
    </div>
    {{ form_row(form.entries.vars.prototype.hours_planned) }}
    {{ form_row(form.entries.vars.prototype.hours_actual) }}
{% endset %}

{% block title %}New Submission{% endblock %}

{% block body %}
    <div
        class="mx-auto max-w-3xl sm:px-6 lg:px-8"
        data-controller="submission"
        data-submission-index-value="{{ form.entries|length > 0 ? form.entries|last.vars.name + 1 : 0 }}"
        data-submission-prototype-value="{{ submission_prototype|raw|e('html_attr') }}"
    >
        {{ form_start(form) }}
        {{ form_row(form.date, {'attr': { 'class': 'max-w-xs'}}) }}
        {{ form_row(form.comments) }}

        <h3 class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Entries</h3>
        <div
            class="overflow-hidden rounded-lg border border-gray-300 shadow-[0px_2px_2px_0px_rgba(9,9,11,0.05)] bg-white"
        >
            <div
                class="w-full grid gap-3 md:grid-cols-4 p-3 bg-gray-50 text-sm">
                <div class="col-span-2">
                    Task
                </div>
                <div>Hours Planned</div>
                <div>Hours Actual</div>
            </div>
            <ul class="flex flex-wrap"
                data-submission-target="collectionContainer">
                {% for entry in form.entries %}
                    <li class="w-full grid gap-3 md:grid-cols-4 p-3 border-t border-gray-300 -mb-3">
                        <div
                            class="col-span-2">
                            {{ form_row(entry.task) }}
                        </div>
                        {{ form_row(entry.hours_planned) }}
                        {{ form_row(entry.hours_actual) }}
                        {#                        {{ form_widget(entry) }} #}
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="mt-3 flex justify-between">
            <button
                type="button"
                data-action="submission#addCollectionElement"
                class="relative focus:outline-none text-black bg-gray-50 hover:bg-gray-100 border border-gray-300 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800
                before:pointer-events-none">
                Add
            </button>
            <button formnovalidate
                    class="relative focus:outline-none text-white bg-green-700 hover:bg-green-800 border border-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800
                before:pointer-events-none before:absolute before:inset-0 before:rounded-lg before:shadow-[0px_1px_0px_0px_#22C55E_inset] hover:before:shadow-[0px_1px_0px_0px_#16A34A_inset]">
                {{ button_label|default('Save') }}
            </button>
        </div>
        {#        before:pointer-events-none before:absolute before:-inset-px before:rounded-lg before:shadow-[0px_2px_8px_0px_#22C55E,_0px_1px_0px_0px_#22C55E_inset]"> #}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
