{% extends 'base.html.twig' %}

{% block title %}Hello SubmissionController!{% endblock %}

{% block body %}
    <div
        class="mx-auto max-w-3xl sm:px-6 lg:px-8">
        {{ form_start(form) }}
        {{ form_row(form.date, {'attr': { 'class': 'max-w-xs'}}) }}
        {{ form_row(form.comments) }}

        <h3>Entries</h3>
        <ul class="flex gap-3 flex-wrap">
            {% for entry in form.entries %}
                <li class="flex-grow min-w-64">{{ form_row(entry.task) }}</li>
                <li>{{ form_row(entry.hours_planned) }}</li>
                <li>{{ form_row(entry.hours_actual) }}</li>
            {% endfor %}
        </ul>
        <button formnovalidate
                class="relative focus:outline-none text-white bg-green-700 hover:bg-green-800 border border-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800
                before:pointer-events-none before:absolute before:inset-0 before:rounded-lg before:shadow-[0px_1px_0px_0px_#22C55E_inset] hover:before:shadow-[0px_1px_0px_0px_#16A34A_inset]">
            {{ button_label|default('Save') }}
        </button>
{#        before:pointer-events-none before:absolute before:-inset-px before:rounded-lg before:shadow-[0px_2px_8px_0px_#22C55E,_0px_1px_0px_0px_#22C55E_inset]">#}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
