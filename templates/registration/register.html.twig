{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div
        class="mx-auto max-w-lg p-4 sm:px-6 lg:px-8">
        <div
            class="overflow-hidden rounded-lg border border-gray-300 shadow-[0px_2px_2px_0px_rgba(9,9,11,0.05)] bg-white p-6">
            <div
                class="flex justify-center mb-4">
                <img
                    src="{{ asset('images/logo.png') }}"
                    height="64" width="64"
                    alt="Time Manager Logo">
            </div>

            <h1 class="font-serif text-2xl tracking-tight text-center mb-2 font-medium">
                Time Manager</h1>
            <div
                class="text-gray-600 text-center mb-6">
                Create an account
            </div>

            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger"
                     role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            <div class="pb-3">
                {{ form_row(registrationForm.email, {'attr': {'autofocus': ''}}) }}
            </div>
            <div class="pb-3">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
            </div>
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit"
                    class="mt-3 w-full relative focus:outline-none text-white bg-black hover:bg-black/90 border border-black focus:ring-4 focus:ring-black/20 font-medium rounded-lg text-sm px-5 py-2.5 before:pointer-events-none before:absolute before:inset-0 before:rounded-[7px] before:shadow-[0px_1px_0px_0px_rgba(255,255,255,0.3)_inset]">
                Register
            </button>
            {{ form_end(registrationForm) }}
            <div
                class="text-gray-600 text-sm mt-6 text-center">
                Time Manager veteran?
                <a
                    href="{{ path('app_login') }}"
                    class="hover:underline">
                    Login to your account.
                </a>
            </div>

        </div>
    </div>
{% endblock %}
